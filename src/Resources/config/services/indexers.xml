<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Gally\SyliusPlugin\Indexer\AbstractIndexer" abstract="true" autowire="true" autoconfigure="true">
        </service>

        <service id="Gally\SyliusPlugin\Indexer\CategoryIndexer" parent="Gally\SyliusPlugin\Indexer\AbstractIndexer" autowire="true" autoconfigure="true">
            <tag name="gally.entity.indexer" priority="50"/>
        </service>

        <service id="Gally\SyliusPlugin\Indexer\Subscriber\CategorySubscriber" autowire="true" autoconfigure="true">
            <argument type="service" id="Gally\SyliusPlugin\Indexer\CategoryIndexer" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
