<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Gally\SyliusPlugin\Config\TokenCacheManager">
            <call method="setCache">
                <argument type="service" id="cache.app" />
            </call>
        </service>
        <service id="Gally\Sdk\Client\Configuration" lazy="true">
            <factory class="Gally\SyliusPlugin\Config\ConfigurationFactory" method="create"/>
            <argument type="service" id="Gally\SyliusPlugin\Repository\GallyConfigurationRepository" />
        </service>
        <service id="Gally\Sdk\Client\Client">
            <argument type="service" id="Gally\Sdk\Client\Configuration" />
            <argument type="service" id="Gally\SyliusPlugin\Config\TokenCacheManager" />
        </service>
        <service id="Gally\Sdk\Service\StructureSynchonizer">
            <argument type="service" id="Gally\Sdk\Client\Configuration" />
            <argument type="service" id="Gally\SyliusPlugin\Config\TokenCacheManager" />
        </service>
        <service id="Gally\Sdk\Service\IndexOperation">
            <argument type="service" id="Gally\Sdk\Client\Configuration" />
            <argument type="service" id="Gally\SyliusPlugin\Config\TokenCacheManager" />
        </service>
        <service id="Gally\Sdk\Service\SearchManager">
            <argument type="service" id="Gally\Sdk\Client\Configuration" />
            <argument type="service" id="Gally\SyliusPlugin\Config\TokenCacheManager" />
        </service>
        <service id="Gally\Sdk\Repository\CatalogRepository">
            <argument type="service" id="Gally\Sdk\Client\Client" />
        </service>
        <service id="Gally\Sdk\Repository\LocalizedCatalogRepository">
            <argument type="service" id="Gally\Sdk\Client\Client" />
            <argument type="service" id="Gally\Sdk\Repository\CatalogRepository" />
        </service>
    </services>
</container>
